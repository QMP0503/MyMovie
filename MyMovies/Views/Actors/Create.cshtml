@model MyMovies.ViewModels.ActorVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Actor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Movies" class="control-label"></label>
                <select asp-for="SelectedMovies" class="form-control" multiple="multiple">
                    @foreach (var movie in Model.Movies)
                    {
                        <option value="@movie.Id">@movie.Title</option>
                    }
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <button asp-controller="Movie" asp-action="Create" class="btn btn-link">Don't See A Movie? Click Here!</button>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
