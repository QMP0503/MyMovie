@model MyMovies.ViewModels.MovieVM


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Release" class="control-label"></label>
                <input asp-for="Release" class="form-control" />
                <span asp-validation-for="Release" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rated" class="control-label"></label>
                <input asp-for="Rated" class="form-control" />
                <span asp-validation-for="Rated" class="text-danger"></span>
            </div>

            @*add actor and director dropdown menu here*@
            
            <div class="form-group">
                <label class="control-label">Actors: </label>
                <select class="form-select" multiple aria-label="multiple select">
                    <option selected>Please Select Actors</option>
                    @foreach(var actor in Model.Actors)
                    {
                        <option value=@actor.Id>@Html.DisplayFor(a => actor.Name)</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Directors: </label>
                <select class="form-select" multiple aria-label="multiple select">
                    @foreach (var directors in Model.Directors)
                    {
                        <option value=@directors.Id>@Html.DisplayFor(a => directors.Name)</option>
                    }
                </select>
            </div>


            <div class="form-group">
                <label asp-for="Runtime" class="control-label"></label>
                <input asp-for="Runtime" class="form-control" />
                <span asp-validation-for="Runtime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Writer" class="control-label"></label>
                <input asp-for="Writer" class="form-control" />
                <span asp-validation-for="Writer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plot" class="control-label"></label>
                <input asp-for="Plot" class="form-control" />
                <span asp-validation-for="Plot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Awards" class="control-label"></label>
                <input asp-for="Awards" class="form-control" />
                <span asp-validation-for="Awards" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poster" class="control-label"></label>
                <input asp-for="Poster" class="form-control" />
                <span asp-validation-for="Poster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Metascore" class="control-label"></label>
                <input asp-for="Metascore" class="form-control" />
                <span asp-validation-for="Metascore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imdbRating" class="control-label"></label>
                <input asp-for="imdbRating" class="form-control" />
                <span asp-validation-for="imdbRating" class="text-danger"></span>
            </div><div class="form-group">
                <label asp-for="imdbVotes" class="control-label"></label>
                <input asp-for="imdbVotes" class="form-control" />
                <span asp-validation-for="imdbVotes" class="text-danger"></span>
            </div><div class="form-group">
                <label asp-for="BoxOffice" class="control-label"></label>
                <input asp-for="BoxOffice" class="form-control" />
                <span asp-validation-for="BoxOffice" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
